[Unit]
Description=redBorder AI Outliers with Keras
Requires=network.target
After=network.target

[Service]
TimeoutStartSec=30
RestartSec=10
Restart=always
WorkingDirectory=/opt/rb-aioutliers/resources/src

User=root
Group=root

KillSignal=SIGTERM  # Use SIGTERM for graceful termination
Type=simple

ExecStart=/usr/bin/scl enable rh-python38 -- python3 /opt/rb-aioutliers/resources/src/__main__.py

TimeoutStopSec=60

[Install]
WantedBy=multi-user.target